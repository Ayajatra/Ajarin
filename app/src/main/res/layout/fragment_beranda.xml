<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Mata Pelajaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@android:color/primary_text_light" android:layout_marginTop="16dp"/>
    <CheckBox
            android:text="MTK"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbMtk" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <CheckBox
            android:text="IPS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbIps"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cbMtk"/>
    <CheckBox
            android:text="IPA"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbIpa"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cbIps"/>
    <CheckBox
            android:text="Inggris"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbInggris"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cbIpa"/>
    <CheckBox
            android:text="Sejarah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbSejarah"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cbInggris"/>
    <CheckBox
            android:text="PKN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cbPkn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cbSejarah"/>
    <Button
            android:text="Langganan Online"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnOnline" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="128dp"
            app:layout_constraintTop_toBottomOf="@+id/cbPkn" style="@style/Widget.AppCompat.Button.Colored"/>
    <Button
            android:text="Langganan Offline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnOffline" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnOnline" style="@style/Widget.AppCompat.Button.Colored"/>
</android.support.constraint.ConstraintLayout>