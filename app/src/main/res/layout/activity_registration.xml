<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/txtNama"
            android:hint="Nama"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline6" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/imageButton"/>
    <Button
            android:text="Selesai"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSelesai"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_marginTop="76dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerPendidikan"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline6" app:layout_constraintHorizontal_bias="0.0"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline5" app:layout_constraintGuide_begin="16dp"
                                          android:orientation="vertical"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline6"
                                          android:orientation="vertical" app:layout_constraintGuide_end="16dp"/>
    <TextView
            android:text="Halo, sepertinya Anda baru disini."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginTop="48dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerProfesi" app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/txtNama"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerPendidikan" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/spinnerProfesi"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline6" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageButton
            android:layout_width="96dp"
            android:layout_height="96dp" app:srcCompat="@drawable/ic_person"
            android:id="@+id/imageButton"
            android:background="@android:color/transparent" android:scaleType="fitXY" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintEnd_toStartOf="@+id/guideline6"/>
</android.support.constraint.ConstraintLayout>